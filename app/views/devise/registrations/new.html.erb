<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, :autofocus => true %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :age %><br />
  <%= f.text_field :age %></div>

  <div class="field">

    <%= f.label :avatar %><br>
    <%= f.text_field :image %><br>
	<%= image_tag image_url(@user.image), style: 'border: 2px solid #44ff55', title: ':name', width: 100, height: 100 %>
    <%= link_to 'Change Image', new_user_registration_path %>

  </div>

  <div class="field">
    <%= f.label :Type_of_interest_in_idea %><br>
    <%= f.collection_select :id, Category.all, :id, :name, {prompt: true}, {:include_blank=>true}  %>
  </div>

  <div><%= f.label :Description_of_individual_or_referral %><br />
  <%= f.text_field :kind %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
