<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :id %><br />
  <%= resource.id %></div>

  <div><%= f.label :name, :autofocus => true %><br />
  <%= f.text_field :name, :class => 'form-control input-sm', :placeholder => 'Name', :style => 'width:200px' %></div>

  <div><%= f.label :age %><br />
  <%= f.text_field :age, :class => 'form-control input-sm', :placeholder => 'Age', :style => 'width:200px' %></div>

  <div><%= f.label :avatar %><br />
  <%= f.text_field :image, :class => 'form-control input-sm', :placeholder => 'Avator URL', :style => 'width:200px' %></div>

  <div class="field">
  	
    <%= f.label :Type_of_interest_in_idea %><br />
    <%= f.collection_select :id, Category.all, :id, :name, {prompt: true}, {:include_blank=>true} %>
  </div>

  <div><%= f.label :Description_of_individual_or_referral %><br />
  <%= f.text_field :kind, :class => 'form-control input-sm', :placeholder => 'Description', :style => 'width:200px' %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :class => 'form-control input-sm', :placeholder => 'Email', :style => 'width:200px' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off", :class => 'form-control input-sm', :placeholder => 'Password', :style => 'width:200px' %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => 'form-control input-sm', :placeholder => 'Password Confirmation', :style => 'width:200px' %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, :class => 'form-control input-sm', :placeholder => 'Current Password', :style => 'width:200px' %></div>

  <div><%= f.submit "Update", :class => 'btn btn-success' %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger' %></p>

<%= link_to "Back", :back %>
